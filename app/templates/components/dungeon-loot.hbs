<h2>{{loot.name}}</h2>

<div class="row">
	<div class="col-sm-4">
		<h4>Cyan</h4>
		{{#bs-button-group
		  value=cyanLoot
		  type="checkbox"
		  onChange=(action (mut cyanLoot)) as |bg|}}
			{{#each loot.cyan as |item|}}
				{{#bg.button value=item}}<img src={{concat "/assests/images/item/" item ".png"}}>{{/bg.button}}
		  	{{/each}}
		{{/bs-button-group}}
	</div>		
	<div class="col-sm-4">
		<h4>Blue</h4>
		{{#bs-button-group
		  value=blueLoot
		  type="checkbox"
		  onChange=(action (mut blueLoot)) as |bg|}}
			{{#each loot.blue as |item|}}
				{{#bg.button value=item}}<img src={{concat "/assests/images/item/" item ".png"}}>{{/bg.button}}
		  	{{/each}}
		{{/bs-button-group}}
	</div>
	<div class="col-sm-4">
		<h4>Orange</h4>
		{{#bs-button-group
		  value=orangeLoot
		  type="checkbox"
		  onChange=(action (mut orangeLoot)) as |bg|}}
			{{#each loot.orange as |item|}}
				{{#bg.button value=item}}<img src={{concat "/assests/images/item/" item ".png"}}>{{/bg.button}}
		  	{{/each}}
		{{/bs-button-group}}
	</div>
</div>
<div clas="row">
	<div class="col-sm-4">
		<h4>Red</h4>
		{{#bs-button-group
		  value=redLoot
		  type="checkbox"
		  onChange=(action (mut redLoot)) as |bg|}}
			{{#each loot.red as |item|}}
				{{#bg.button value=item}}<img src={{concat "/assests/images/item/" item ".png"}}>{{/bg.button}}
		  	{{/each}}
		{{/bs-button-group}}
	</div>
	<div class="col-sm-4">
		<h4>White</h4>
		{{#bs-button-group
		  value=whiteLoot
		  type="checkbox"
		  onChange=(action (mut whiteLoot)) as |bg|}}
			{{#each loot.white as |item|}}
				{{#bg.button value=item}}<img src={{concat "/assests/images/item/" item ".png"}}>{{/bg.button}}
		  	{{/each}}
		{{/bs-button-group}}
	</div>
	<div class="col-sm-4">
		{{#bs-button onClick=(action "save" cyanLoot blueLoot orangeLoot redLoot whiteLoot)}}Save{{/bs-button}}
		{{#bs-button onClick=(action "cancel")}}Cancel{{/bs-button}}
	</div>
</div>